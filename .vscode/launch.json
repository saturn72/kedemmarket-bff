    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "start:debug",
                "--e NODE_ENV=dev",
                "--",
                "--inspect-brk"
            ],
            // "envFile": "${workspaceFolder}/.env.debug",
            "autoAttachChildProcesses": true,
            "restart": true,
            "sourceMaps": true,
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            // "program": "${workspaceFolder}\\src\\catalog\\catalog.service.ts",
            // "outFiles": [
            //     "${workspaceFolder}/**/*.js"
            // ]
        }
    ]
}